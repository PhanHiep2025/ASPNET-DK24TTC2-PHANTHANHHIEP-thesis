@inject IHttpContextAccessor HttpContextAccessor
@using Newtonsoft.Json;
@{
	ViewData["Title"] = "Home Page";
	int count = 0;
}

<!-- start banner Area -->
@model List<ShoesStore.Models.Banner>
<section class="">
	<div class="container">
		<div class="row screen align-items-center justify-content-start">
			<div class="col-lg-12">
				<div class="active-banner-slider owl-carousel">
					<!-- single-slide -->
					@foreach (var banner in Model)
					{
						if (count == 0)
						{
							<div class="row single-slide align-items-center d-flex">
								<div class="col-lg-5 col-md-6">
									<div class="banner-content">
										<h1>@banner.Tenbanner</h1>
										<h3>@banner.Slogan</h3>
										<div class="add-bag d-flex align-items-center">
											<a class="primary-btn" href="@banner.Link">Mua hàng ngay</a>
										</div>
									</div>
								</div>
								<div class="col-lg-7">
									<div class="banner-img">
										<a href="@banner.Link">
											<img class="img-fluid" style="max-width:657px;max-height:394px;"
												 src="@Url.Content($"~/img/banner/{banner.Vitri}")" alt="Banner Image">
										</a>
									</div>
								</div>
							</div>
						}
						else
						{
							<div class="row single-slide">
								<div class="col-lg-5">
									<div class="banner-content">
										<h1>@banner.Tenbanner</h1>
										<h3>@banner.Slogan</h3>
										<div class="add-bag d-flex align-items-center">
											<a class="primary-btn" href="@banner.Link">Mua hàng ngay</a>
										</div>
									</div>
								</div>
								<div class="col-lg-7">
									<div class="banner-img">
										<a href="@banner.Link">
											<img class="img-fluid" style="max-width:657px;max-height:394px;"
												 src="@Url.Content($"~/img/banner/{banner.Vitri}")" alt="Banner Image">
										</a>
									</div>
								</div>
							</div>
						}

					}

				</div>
			</div>
		</div>
	</div>
</section>
<!-- End banner Area -->
@if (HttpContextAccessor.HttpContext.Session.GetInt32("Khuyenmai") == 1)
{
	@await Component.InvokeAsync("PdSliderSale")
}

<div style="width:100%;height:30px"></div>
@await Component.InvokeAsync("HomeProductSlider", new { trangthai = 3 });

